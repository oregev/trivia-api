// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection

  // url      = env("DATABASE_URL")
  // url      = env("VERCEL_DB_URL")
}

model user {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  token    String
}

model question {
  id         String   @id @default(uuid())
  type       String
  difficulty Int
  category   String
  question   String
  correct    String
  incorrect  String[]
}

model category {
  id   String @id @default(uuid())
  name String @unique
}
